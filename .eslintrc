{
      "env": {
            "browser": true,
            "es6": true
      },
      "extends": ["react-app", "prettier"],
      "plugins": ["react", "prettier"],
      "parserOptions": {
            "ecmaVersion": 2018
      },
      "rules": {
            "prettier/prettier": [
                  "warn",
                  {
                        "arrowParens": "avoid",
                        "semi": false,
                        "trailingComma": "none",
                        "endOfLine": "lf",
                        "tabWidth": 2,
                        "useTabs": false,
                        "singleQuote": true,
                        "printWidth": 120,
                        "jsxSingleQuote": false
                  }
            ],
            "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
      }
}
